LABEL org.opencontainers.image.description="A blazing fast component for the revolutionary Vodding application. Stream like never before! ðŸŽ‰"



WORKDIR /app/

FROM base AS install

WORKDIR /temp/

COPY common/package.json /temp/common/
COPY web/package.json /temp/web/

RUN bun install


FROM base AS development

COPY web/ /app/
RUN bun install


WORKDIR /app/web/
ENV NODE_ENV=development
EXPOSE 5173
ENTRYPOINT  ["bun"]
CMD ["run", "dev"]


FROM base AS production_build
COPY --from=install /temp/node_modules node_modules
COPY web/ /app/
COPY common/ /app/

WORKDIR /app/web
ENV NODE_ENV=production

RUN bun run build


FROM nginx:latest AS production
COPY --from=web_production_build /app/web/dist /usr/share/nginx/html

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]

